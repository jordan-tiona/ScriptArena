{
	"compilerOptions": {
		"strict": true,
		"strictFunctionTypes": false,
		"skipLibCheck": true,

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"allowJs": true,
		"declaration": true,
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "esnext",
		"lib": [ "esnext" ]
	}
}
